@model HomeVM

@{
    ViewData["Title"] = "Home Page";
}

        <section id="slider-container" class="slider-area"> 
            <div class="slider-owl owl-theme owl-carousel"> 

                @foreach (var item in Model.Sliders)
               {
                   <div class="single-slide item" style="background-image: url(./assets/img/slider/@item.Image)">
                    <div class="slider-content-area">  
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-7 col-md-offset-left-5"> 
                                    <div class="slide-content-wrapper">
                                        <div class="slide-content">
                                            <h3>@item.TopTitle.ToUpper()</h3>
                                            <h2>@item.BottomTitle.ToUpper()</h2>
                                            <p>@item.Description</p>
                                            <a class="default-btn" href="~/assets/about.html">Learn more</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
               }
               					
            </div>
        </section>
		<!-- Background Area End -->
        <!-- Notice Start -->
        <section class="notice-area pt-150 pb-150">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <div class="notice-left">
                            <h3>notice board</h3>
                            @foreach (var item in Model.Notices)
                           {
                               <div class="single-notice-left mb-25 pb-25">
                                <h4>@item.Date.ToString("dd.MM.yyyy")</h4>
                                <p>@item.Description</p>
                            </div>
                           }
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="notice-right">
                            @foreach (var item in Model.Informations)
                           {
                            <div class="single-notice-right mb-25 pb-10">
                                <h3>@item.Title.ToUpper()</h3>
                                <p>@item.Description</p>
                            </div> 
                           }
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Notice End -->
