@model List<string>
@{
    ViewData["Title"] = "GetRoles";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Roles of @ViewBag.Name </h4>

                        <a class="btn btn-primary" asp-action="AddRole" asp-route-id="@ViewBag.UserId">Add role</a>

                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var roleName in Model)
                                    {
                                        <tr class="table-success">
                                            <td>
                                                @roleName
                                            </td>
                                            <td>
                                                <a class="btn btn-primary" asp-controller="User" asp-action="RemoveRole" asp-route-id="@ViewBag.UserId" asp-route-roleName="@roleName">Remove role</a>
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
