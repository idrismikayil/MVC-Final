@model Category

@{
    ViewData["Title"] = "Update";
}

      <div class="main-panel">        
        <div class="content-wrapper">
          <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Update Layout</h4>
                  
                  <form class="forms-sample" method="post" asp-controller="Category" asp-action="Update" enctype="multipart/form-data">
                           
                             
                             <div class="form-group">
                                <label for="exampleInputUsername1">Name </label>
                                <input asp-for="Name" class="form-control" placeholder="">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            

                            <button type="submit" class="btn btn-primary me-2"> Submit</button>
                            <a class="btn btn-light" asp-action="Index">Cancel</a>
                        </form>
                </div>
              </div>
             </div>
           </div>
          </div>
         </div>