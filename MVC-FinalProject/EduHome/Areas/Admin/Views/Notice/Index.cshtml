@model  List<NoticeBoard>
@{
    ViewData["Title"] = "Index";
}
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">
            <div class="col-lg-12 stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Notice</h4>
                  
                  <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                      <thead>
                        <tr>
                          <th>
                            Id
                          </th>
                          <th>
                             Date 
                          </th>
                          <th>
                             Description 
                          </th>
                          
                           <th>
                            Actions
                          </th>
                        </tr>
                      </thead>
                      <tbody>

                       @foreach (var i in Model)
                      {
                           <tr class="table-primary">
                          <td>
                            @i.Id
                          </td>
                         <td>
                            @i.Date.ToString("dd, MMMM yyyy")
                          </td>
                          <td>
                            @Html.Raw(@i.Description.Substring(0, i.Description.Length>50 ? 50:i.Description.Length))...
                          </td>
                         
                          <td>
                          <a class="btn btn-primary"  asp-action="Detail" asp-route-id="@i.Id">Detail</a>
                          <a class="btn btn-warning"  asp-action="Update" asp-route-id="@i.Id">Update</a>
                          <a class="btn btn-danger" asp-action="Delete" asp-route-id="@i.Id">Delete</a>
                          </td>
                        </tr>
                      }
                    
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>