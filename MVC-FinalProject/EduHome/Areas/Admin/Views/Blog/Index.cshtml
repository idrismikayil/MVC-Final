@model List<Blog>
@{
    ViewData["Title"] = "Index";
}

      <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">
            <div class="col-lg-12 stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Blog List</h4>
                  
                  <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                      <thead>
                        <tr>
                          <th>
                            Id
                          </th>
                          <th>
                             Image
                          </th>
                          <th>
                             Title
                          </th>
                          @*<th>
                             Author Name
                          </th>*@
                          <th>
                            Actions
                          </th>
                        </tr>
                      </thead>
                      <tbody>

                       @foreach (var blog in Model)
                      {
                           <tr class="table-primary">
                          <td>
                            @blog.Id
                          </td>
                          <td>
                            <img src="~/assets/img/blog/@blog.Image" style="width: 200px; height:200px" />
                          </td>
                          <td>
                              @blog.Title
                          </td>
                         @*<td>
                             @blog.AuthorName
                          </td>*@
                          <td>
                         <a class="btn btn-primary" asp-action="Detail" asp-route-id="@blog.Id">Detail</a>
                          <a class="btn btn-warning" asp-action="Update" asp-route-id="@blog.Id">Update</a>
                          <a class="btn btn-danger "asp-action="Delete" asp-route-id="@blog.Id">Delete</a>
                          </td>
                        </tr>
                      }
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>