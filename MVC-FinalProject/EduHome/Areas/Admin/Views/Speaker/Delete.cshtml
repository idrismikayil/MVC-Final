@model Speaker
@{
    ViewData["Title"] = "Delete";
}

 <div class="main-panel">        
        <div class="content-wrapper">
          <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">@Model.Fullname</h4>
                  <img src="~/assets/img/event/@Model.Image" style="width: 450px" /><br><br><br>
                  
                  <p>
                   Position: @Model.Position
                  </p>
                   <p>Are you sure ?</p>
                  <form style="display: inline-block" method="post" asp-action="Delete"><button class="btn btn-secondary" type="submit">Submit</button></form>
                  <a class="btn btn-secondary" asp-action="Index">Cancel</a>
                </div>
              </div>
            </div>
           </div>
          </div>
          </div>
     
