@model  List<Layout>
@{
    ViewData["Title"] = "Index";
}
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">
            <div class="col-lg-12 stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Layout</h4>
                  
                  <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                      <thead>
                        <tr>
                          <th>
                            Id
                          </th>
                          <th>
                             Navbar Logo
                          </th>
                          <th>
                             Footer Logo
                          </th>
                          
                           <th>
                            Actions
                          </th>
                        </tr>
                      </thead>
                      <tbody>

                       @foreach (var layout in Model)
                      {
                           <tr class="table-primary">
                          <td>
                            @layout.Id
                          </td>
                          <td>
                            <img src="~/assets/img/logo/@layout.NavLogo" style="width: 150px; border-radius: 0%;" />
                          </td>
                           <td>
                            <img src="~/assets/img/logo/@layout.FooterLogo" style="width: 150px; border-radius: 0%;" />
                          </td>
                         
                          <td>
                          <a class="btn btn-primary" asp-controller="Layout" asp-action="Detail" asp-route-id="@layout.Id">Detail</a>
                          <a class="btn btn-warning" asp-controller="Layout" asp-action="Update" asp-route-id="@layout.Id">Update</a>
                          <a class="btn btn-danger" asp-action="Delete" asp-route-id="@layout.Id">Delete</a>
                          </td>
                        </tr>
                      }
                    
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>



